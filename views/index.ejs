<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!--Bootstrap CDN-->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
    crossorigin="anonymous"
  >

  <!--FontAwesome-->
  <script src="https://kit.fontawesome.com/68f411cf90.js" crossorigin="anonymous"></script>

  <title>URL Shortener</title>
</head>
<body data-bs-theme="dark">
  <div class="container-fluid p-4">
    <h1>URL Shortener</h1>

    <form action="/shortenUrl" method="POST" class="row gx-2">
      <label for="fullUrl" class="visually-hidden">URL</label>
      <input class="col form-control" placeholder="URL" type="url" name="fullUrl" id="fullUrl" required />
      <button type="submit" class="btn btn-success col-1 ms-2">Shorten</button>
    </form>

    <table class="table table-responsive table-hover">
      <thead>
        <tr>
          <th>URL</th>
          <th>short URL</th>
          <th>count</th>
        </tr>
      </thead>
      <tbody>
        <% urls.forEach(({full, short, count}) => { %>
          <tr>
            <td><a href="<%= full %>"><%= full %></a></td>
            <td>
              <a href="<%= short %>">
                <%= short %>
              </a>
              <button data-copy="<%= short %>" class="ms-1 bg-dark btn rounded-5 text" onclick="sendUrlToClipboard(this)">
                <i class="fa-regular fa-copy"></i>
              </button>
            </td>
            <td><%= count %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

  </div>
  <script>
    function sendUrlToClipboard(el) {
      const url = 'http://localhost:3000/' + el.getAttribute('data-copy');
      return navigator.clipboard.writeText(url)
    }
  </script>
</body>
</html>